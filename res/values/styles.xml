<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="YunaTubeTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <!-- <item name="homeAsUpIndicator">@drawable/new_indicator</item>
        <item name="android:homeAsUpIndicator">@drawable/new_indicator</item> -->
    </style>

    <style name="YunaTubeTheme.ActionBarStyle" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:titleTextStyle">@style/ActionBarText</item>
        <item name="android:background">#020015</item>
        <item name="android:alpha">0x80</item>
    </style>

    <style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Theme.YunaTubeDialog" parent="Theme.Sherlock.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="superMenuItemText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#bfc7e0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="superMenuDescriptionText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="superMenuDividerText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#889fe7</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SearchDialogTitleText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SearchDialogText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="ColoredDialogText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0f4906</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="PhotoListText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0f3652</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ActionBarText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="YouTubeMenuText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#012332</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="YouTubeMenuRedText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#84161d</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="YouTubeMenuDescriptionText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
    </style>
    
    <style name="GridViewItemText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>