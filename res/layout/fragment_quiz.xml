<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skyblue_gradient_background"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20.0dp"
                android:src="@drawable/quiz_title" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView2"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20.0dp"
                android:gravity="center"
                android:text="@string/quiz_desc" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/quiz_one"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/quiz_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:padding="2.0dp"
                    android:src="@drawable/quiz_start" />

                <ImageButton
                    android:id="@+id/quiz_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:padding="2.0dp"
                    android:src="@drawable/quiz_rank" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15.0dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/quiz_two"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/quiz_start_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:padding="2.0dp"
                    android:src="@drawable/quiz_start" />

                <ImageButton
                    android:id="@+id/quiz_rank_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:padding="2.0dp"
                    android:src="@drawable/quiz_rank" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15.0dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/quiz_three"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/quiz_start_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:padding="2.0dp"
                    android:src="@drawable/quiz_start" />

                <ImageButton
                    android:id="@+id/quiz_rank_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:padding="2.0dp"
                    android:src="@drawable/quiz_rank" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15.0dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/quiz_four"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/quiz_start_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:padding="2.0dp"
                    android:src="@drawable/quiz_start" />

                <ImageButton
                    android:id="@+id/quiz_rank_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:padding="2.0dp"
                    android:src="@drawable/quiz_rank" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15.0dp" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/quiz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15.0dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/quiz_thinking_mini" />

                <TextView
                    android:id="@+id/time_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20.0dp"
                    android:layout_marginTop="10.0dp"
                    android:layout_toRightOf="@id/imageView1"
                    android:text="경과 시간 : 00:00"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_remaining"
                    android:layout_marginLeft="20.0dp"
                    android:layout_marginTop="20.0dp"
                    android:layout_toRightOf="@id/imageView1"
                    android:text="획득 점수 : 0"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/question_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/score"
                    android:layout_marginLeft="20.0dp"
                    android:layout_marginTop="20.0dp"
                    android:layout_toRightOf="@id/imageView1"
                    android:text="현재 문항 : 1/100"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/measure"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25.0dp"
                android:layout_marginRight="25.0dp"
                android:layout_marginTop="15.0dp"
                android:text="불러오는 중..."
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20.0dp"
                android:layout_marginRight="20.0dp"
                android:layout_marginTop="15.0dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/option_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/card_background_selector"
                    android:text="불러오는 중..."
                    android:textAppearance="?android:textAppearanceMedium" />

                <Button
                    android:id="@+id/option_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:text="불러오는 중..."
                    android:textAppearance="?android:textAppearanceMedium" />

                <Button
                    android:id="@+id/option_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:text="불러오는 중..."
                    android:textAppearance="?android:textAppearanceMedium" />

                <Button
                    android:id="@+id/option_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15.0dp"
                    android:background="@drawable/card_background_selector"
                    android:text="불러오는 중..."
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15.0dp"
                android:layout_below="@id/options" />

            <ImageView
                android:id="@+id/quiz_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/quiz_correct"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/quiz_wrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/quiz_wrong"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/quiz_main" />

        <TextView
            android:id="@+id/congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.0dp"
            android:gravity="center_horizontal"
            android:text="@string/quiz_congrats"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/congrats"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.0dp"
            android:text=""
            android:textAppearance="?android:textAppearanceMedium" />

        <RelativeLayout
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.0dp" >

            <EditText
                android:id="@+id/enter_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_weight="1.0"
                android:ems="10"
                android:hint="@string/quiz_enter_nickname"
                android:maxLength="9" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dp"
                android:layout_toRightOf="@id/enter_nickname"
                android:layout_weight="1.0"
                android:background="@drawable/card_background_selector"
                android:padding="3.0dp"
                android:text="@string/quiz_submit" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ranking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <WebView
            android:id="@+id/rankingview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>