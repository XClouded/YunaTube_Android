<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b323f" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/supermenu_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/supermenu_menu_selector" >

            <ImageView
                android:id="@+id/ImageView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/supermenu_0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ImageView0"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supermenu_home"
                    android:textAppearance="@style/superMenuItemText" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/supermenu_about_yuna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/supermenu_menu_selector" >

            <ImageView
                android:id="@+id/ImageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/supermenu_1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ImageView1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supermenu_about_yuna"
                    android:textAppearance="@style/superMenuItemText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supermenu_about_yuna_desc"
                    android:textAppearance="@style/superMenuDescriptionText" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/supermenu_to_yuna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/supermenu_menu_selector" >

            <ImageView
