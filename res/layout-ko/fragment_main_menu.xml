                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/supermenu_4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ImageView3"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supermenu_youtube"
                    android:textAppearance="@style/superMenuItemText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supermenu_youtube_desc"
                    android:textAppearance="@style/superMenuDescriptionText" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/supermenu_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
