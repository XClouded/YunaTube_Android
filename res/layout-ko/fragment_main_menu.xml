                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ImageView6" >

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/supermenu_message"
                    android:textAppearance="@style/superMenuItemText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t1"
                    android:text="@string/supermenu_message_desc"
                    android:textAppearance="@style/superMenuDescriptionText" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/supermenu_youtube"
